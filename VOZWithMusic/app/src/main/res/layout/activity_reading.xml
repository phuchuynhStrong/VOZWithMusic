<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/atvt_reading_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phuc.frankie.vozwithmusic.ActivityReading"
    android:background="@color/cover_background">
    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/atvt_reading_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:id="@+id/atvt_reading_tv_chapter"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"
            android:id="@+id/chapter"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:text="@string/pre_chap_btn_title"
                android:layout_alignParentStart="true"
                android:id="@+id/atvt_reading_pre_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:text="Trang chÃ­nh"
                android:layout_toStartOf="@+id/atvt_reading_next_btn"
                android:layout_toEndOf="@+id/atvt_reading_pre_btn"
                android:id="@+id/atvt_reading_home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:text="@string/next_chap_btn_title"
                android:layout_alignParentEnd="true"
                android:id="@+id/atvt_reading_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
